
generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             Int      @id @default(autoincrement())
  name           String   
  email          String   @unique
  hashedPassword String
  role           Role     @default(MEMBER)
  client         Client[]
}

model Client {
  id         Int      @id @default(autoincrement())
  name       String   
  phone      String
  email      String
  company    String?
  status     Status
  created_At DateTime @default(now())
  userId     Int
  user       User     @relation(fields: [userId], references: [id])
  @@unique([name, userId])

}

enum Status {
  LEAD
  ACTIVE
  CLOSED
}

enum Role {
  ADMIN
  MEMBER
}
